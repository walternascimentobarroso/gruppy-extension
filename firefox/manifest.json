{
  "manifest_version": 2,
  "name": "Gruppy",
  "version": "2.1",

  "permissions": ["activeTab", "scripting", "tabs"],

  "icons": {
    "48": "images/gruppy.png"
  },

  "browser_action": {
    "default_icon": {
      "48": "images/gruppy.png"
    },
    "default_title": "Gruppy",
    "default_popup": "popup/index.html"
  },

  "applications": {
    "gecko": {
      "id": "walter.nascimento@gruppy.com.br",
      "strict_min_version": "48.0"
    }
  }
}
