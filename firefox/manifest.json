{
  "manifest_version": 2,
  "name": "Gruppy",
  "version": "2.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "walter.nascimento@gruppy.com.br"
    }
  },

  "permissions": ["http://*/*", "https://*/*", "privacy"],

  "browser_action": {
    "default_icon": "images/gruppy.png",
    "default_title": "Gruppy",
    "default_popup": "popup/index.html"
  },

  "icons": {
    "48": "images/gruppy.png"
  }
}
